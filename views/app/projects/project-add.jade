extends ../../layout.jade
block title
  title= (!project) ? "Add a Project" : "Edit Project"
  
block links
  link(type="text/css", rel="stylesheet", href="/css/app/clients/clients.css")

block content
  div(class="container container-small")
    div(class="row")
      div(class="col s7")
        h4(class="red-text lighten-2 thin")= (!project) ? "Add a Project" : "Edit Project"
      div(class="col s5")
        a(href="/app/clients/" + clientId + "/projects" class="waves-effect waves-blue btn-flat right bottom blue-text")
          i(class="mdi-navigation-arrow-back left")
          | Back
    div(class="row")
      div(class="col s12")
        div(class="card white")
          div(class="card-content")
            div(class="row")
              div(class="input-field col s12")
                input(id="name", type="text", class="validate", value=(!project) ? "" : project.name)
                label(for="name") Project Name
            div(class="row")
              div(class="input-field col s12")
                input(id="location", type="text", class="validate", value=(!project) ? "" : project.location)
                label(for="location") Project Location
            
            div(class="row", style="margin-top: 20px")
              div(class="col s12")
                span(id="message", class="red-text text-lighten-2 left")
                a(id="btn-add", class="right waves-effect waves-light btn")
                  i(class="mdi-content-add right")
                  = (!project) ? "Add" : "Edit"

block scripts
  script(type='text/javascript').
    var clientId = !{clientId}
    var project = !{JSON.stringify(project)}
  script(src="/js/app/projects/project-add.js")