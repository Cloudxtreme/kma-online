extends ../../layout.jade
block title
  title Clients
  
block links
  link(type="text/css", rel="stylesheet", href="/css/app/clients/clients.css")

block content
  div(class="container")
    div(class="fixed-action-btn" style="bottom: 45px; right: 45px;")
      a(href="clients/add", class="btn-floating btn-large waves-effect waves-light red lighten-2")
        i(class="large mdi-content-add")
        
    div(class="row")
      div(class="col s12")
        h4(class="red-text text-lighten-2 thin") Clients
    //div(class="row")
      div(class="col s12")
        h4(class="red-text text-lighten-2 thin") Clients
    //div(class="row")
      div(class="col s12")
        div(class="collection")
          a(href="#!" class="collection-item")
          a(href="#!" class="collection-item active") Alvin
          a(href="#!" class="collection-item") Who is Alvin?
          a(href="#!" class="collection-item") Alvin
          
    each client in clients
      div(class="row")
        div(class="col s12")
          a(href="/app/clients/" + client._id + "/projects")
            div(class="card white")
              div(class="card-content blue lighten-2 white-text")
                div(class="row")
                  div(class="col s4")
                    div(class="row")
                      div(class="col s12")
                        span(class="card-title")= client.name
                    if (client.company)
                      div(class="row")
                        div(class="col s12")
                          span= client.company
                  div(class="col s8")
                    if (client.email)
                      div(class="row")
                        div(class="col s12 right-align")
                          span= client.email
                            
                    if (client.phone)
                      div(class="row")
                        div(class="col s12 right-align")
                          span= client.getPhoneString()
                            
                    if (client.getAddressShort())
                      div(class="row")
                        div(class="col s12 right-align")
                          span= client.getAddressShort()
              div(class="card-action")
                a(href='/app/clients/edit/' + client._id, class="right") Edit Client
                //a(href='#' class="right") View Client Info
                a(href="/app/clients/" + client._id + "/projects", class="right") View Projects

    //div(class="row")
      div(class="col s12")
        a(href="#")
          div(class="card white")
            div(class="card-content")
              div(class="row")
                div(class="col s6")
                  span(class="card-title teal-text text-accent-4") McKenna Prause
                div(class="col s6")
                  div(class="row")
                    div(class="col s12")
                      span(class="right") Something
                  div(class="row")
                    div(class="col s12")
                      span(class="right") Something                    


            div(class="card-action")
              a(href='#' class="right") Edit Client
              a(href='#' class="right") View Client Info
              a(href="#" class="right") View Projects


