extends ../layout
block title
  title K&M Construction
  
block content
  div(class="container")
    div(class="row")
      div(class="col s9")
        //div(class="row")
          div(class="col s12")
            h4(class="red-text text-lighten-2 thin") Dashboard
        div(class="row")
          div(class="col s12")
            div(class="card white")
              div(class="card-content")
                span(class="card-title red-text") Dashboard
                p This is the dashboard. We can put important information here or quick
                | links to things you use most often.
              
              div(class="card-action right-align")
                a(href="#") Link to something
            
        div(class="row")
          div(class="col s12")
            div(class="card white")
              div(class="card-content", style="padding-right: 0px; padding-left: 0px; padding-bottom: 0px")
                span(class="card-title red-text", style="padding-right: 20px; padding-left: 20px") Active Invoices
                
                div(class="collection z-depth-0", style="margin-bottom: 0px")
                  each invoice in invoices
                    a(href="#" class="collection-item item-row")
                      table
                        tbody
                          tr
                            td= invoice.getDateString()
                            //td(id="memo_" + item._id)= item.memo || item.category
                            //td(id="cost_" + item._id, style="width:15%", class="center")= "$" + (item.rate * item.qty).toFixed(2)
       
      div(class="col s3")
        h5 Settings
          i(class="mdi-action-settings small left")
        div(class="divider")
        div(class="section")
          a(href="#") User Settings
          br
          br
          a(href="#") App Preferences
          br
          br
          a(href="#") Something Else
          
block scripts
  script(src="/js/app/index.js")